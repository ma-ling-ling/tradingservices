<h2> Your Shopping Cart</h2>

<div>
	<table class="table table-striped">
		<thead>
			<tr>
				<th> Service You Ordered </th>
				<th> Provider </th>
				<th> Hours You Ordered </th>
				<th> Points Per Hour </th>
				<th> Your Message to Provider </th>
				<th> Total Points Required </th>
			</tr>
		</thead>
		<tbody>
			<% @cart_items.each do |cart_item| %>
				<tr>
					<td><%= cart_item.service.name %> </td>
					<td><%= cart_item.service.user.name %> </td>
					<td><%= cart_item.hours_ordered %> </td>
					<td><%= cart_item.service.point_value %> </td>
					<td><%= cart_item.message_to_provider %> </td>
					<td><%= cart_item.cart_item_total %> </td>
					<td> <%= link_to "Remove", delete_from_cart_path(cart_item_id: cart_item.id), method: :post, data: {confirm: "Are you sure?"} %></td>

				</tr>
			<%end%>
		</tbody>

	</table>
</div>


<%= link_to "Continue Shopping", root_path, class: "btn btn-info" %>
<% unless @cart_items.empty? %>
	<%= link_to "Proceed to Checkout", checkout_path, class: "btn btn-success" %>
<% end %>